<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_person"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fengchi.TimeTravel.Mine.Activity.PersonActivity">
    <com.fengchi.TimeTravel.Utils.TitleBarView
        xmlns:titlebarview="http://schemas.android.com/apk/res/com.juli.onlineInstall"
        android:id="@+id/person_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebarview:leftable="true"
        app:rightDrawableShow="false"
        titlebarview:rightable="false"
        />
    <View
        android:id="@+id/v_goods"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/person_titlebar"
        android:background="@color/cutOff"/>
    <RelativeLayout
        android:id="@+id/rl_person"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/v_goods"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="密码修改"
            android:textColor="#212121"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_go"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/goods_order_enter"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <View
        android:id="@+id/v_h2"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#808080"
        android:layout_below="@id/rl_person"/>
    <RelativeLayout
        android:id="@+id/rl_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/quitLogin"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="退出登录"
            android:textColor="@color/textRed"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginBottom="60dp"
            android:background="@color/buttonBackground" />

    </RelativeLayout>



</RelativeLayout>
